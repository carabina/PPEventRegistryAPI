source 'https://github.com/CocoaPods/Specs.git'

project 'PPEventRegistryAPI.xcodeproj'
inhibit_all_warnings!

use_frameworks!

def pods
  pod 'SwiftyJSON', :git => 'https://github.com/ratkins/SwiftyJSON.git', :branch => 'swift3'
end

def testing_pods
  pod 'PPEventRegistryAPI', :path => '../'
  pod 'Quick', :git => 'https://github.com/norio-nomura/Quick.git', :branch => 'nn-swift-3-compatibility'
  pod 'Nimble', :git => 'https://github.com/norio-nomura/Nimble.git', :branch => 'nn-swift-3-compatibility'
  pod 'OHHTTPStubs', :git => 'https://github.com/djbriane/OHHTTPStubs.git', :branch => 'swift3'
  pod 'OHHTTPStubs/Swift', :git => 'https://github.com/djbriane/OHHTTPStubs.git', :branch => 'swift3'
end

target 'WatchHost watchOS Extension' do
  # hosting target of `PPEventRegistryAPI watchOS`
  platform :watchos, '3.0'
end

abstract_target 'TargetPods' do
  pods

  target 'PPEventRegistryAPI iOS' do
    platform :ios, '10.0'
  end

  target 'PPEventRegistryAPI tvOS' do
    platform :tvos, '10.0'
  end

  target 'PPEventRegistryAPI watchOS' do
    platform :watchos, '3.0'
  end

end

abstract_target 'TestingPods' do
  pods
  testing_pods

  target 'PPEventRegistryAPITests iOS' do
    platform :ios, '10.0'
  end

  target 'PPEventRegistryAPITests tvOS' do
    platform :tvos, '10.0'
  end

end

# [Xcode 8 beta 2]: CopySwiftLibs for Pods framework fails with Mach-O header error #5598
post_install do |installer|
    installer.pods_project.targets.each do |target|
        target.build_configurations.each do |config|
            config.build_settings['ALWAYS_EMBED_SWIFT_STANDARD_LIBRARIES'] = 'NO'
        end
    end
end
