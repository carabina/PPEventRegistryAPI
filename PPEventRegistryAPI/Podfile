source 'https://github.com/CocoaPods/Specs.git'

project 'PPEventRegistryAPI.xcodeproj'
inhibit_all_warnings!

use_frameworks!

def testing_pods
  pod 'PPEventRegistryAPI', :path => '../'
  pod 'Quick', :git => 'https://github.com/norio-nomura/Quick.git', :branch => 'nn-swift-3-compatibility'
  pod 'Nimble', :git => 'https://github.com/mokagio/Nimble.git', :branch => 'mokagio/xcode-8-beta-4'
  pod 'OHHTTPStubs', :git => 'https://github.com/mxcl/OHHTTPStubs.git', :branch => 'swift-3.0'
  pod 'OHHTTPStubs/Swift', :git => 'https://github.com/mxcl/OHHTTPStubs.git', :branch => 'swift-3.0'
end

target 'WatchHost watchOS Extension' do
  # hosting target of `PPEventRegistryAPI watchOS`
  platform :watchos, '3.0'
end

abstract_target 'TargetPods' do
  target 'PPEventRegistryAPI iOS' do
    platform :ios, '10.0'
  end

  target 'PPEventRegistryAPI tvOS' do
    platform :tvos, '10.0'
  end

  target 'PPEventRegistryAPI watchOS' do
    platform :watchos, '3.0'
  end

  target 'PPEventRegistryAPI macOS' do
    platform :osx, '10.12'
  end

end

abstract_target 'TestingPods' do
  testing_pods

  target 'PPEventRegistryAPITests iOS' do
    platform :ios, '10.0'
  end

  target 'PPEventRegistryAPITests tvOS' do
    platform :tvos, '10.0'
  end

  target 'PPEventRegistryAPITests macOS' do
    platform :osx, '10.12'
  end

end

# [Xcode 8 beta 2]: CopySwiftLibs for Pods framework fails with Mach-O header error #5598
post_install do |installer|
    installer.pods_project.targets.each do |target|
        target.build_configurations.each do |config|
            config.build_settings['ALWAYS_EMBED_SWIFT_STANDARD_LIBRARIES'] = 'NO'
        end
    end
end
